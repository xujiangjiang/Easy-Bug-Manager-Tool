<Application x:Class="EasyBugManagerTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EasyBugManagerTool"
             
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose"
             
             Startup="Application_Startup"
             Exit="Application_Exit">

    <Application.Resources>

        <!--合并字典-->
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>

                <!--字体的字典-->
                <ResourceDictionary Source="/EasyBugManagerTool;component/Xaml/Dictionary/FontDictionary.xaml"/>

                <!--图片的字典-->
                <ResourceDictionary Source="/EasyBugManagerTool;component/Xaml/Dictionary/ImageDictionary.xaml"/>

                <!--文字的字典-->
                <ResourceDictionary Source="/EasyBugManagerTool;component/Xaml/Dictionary/ChineseTextDictionary.xaml"/>

                <!--转换器的字典-->
                <ResourceDictionary Source="/EasyBugManagerTool;component/Xaml/Dictionary/ConverterDictionary.xaml"/>



                <!--样式的字典-->
                <ResourceDictionary Source="/EasyBugManagerTool;component/Xaml/Style/Button/NoBackgroundButtonDictionary.xaml"/>

            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>

    </Application.Resources>

</Application>
